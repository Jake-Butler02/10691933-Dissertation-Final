<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/backgroundpcp"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="About And Settings Page"
        android:textSize="24sp"
        android:textStyle="bold"
        android:padding="16dp"
        android:gravity="center_horizontal" />

    <TextView
        android:id="@+id/aboutEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/titleTextView"
        android:layout_margin="16dp"
        android:hint="To use this scoreboard, first go to Add Player/Team and Pub by clicking on the button. After, go back to the scoreboard page and click Add New to start adding your scores. To clear the data in the scoreboard, press the Clear Data button below. Always remeber to drink responsibly."
        android:textSize="18sp"
        android:minLines="5"
        android:gravity="start|top"
        android:inputType="textMultiLine" />

    <Button
        android:id="@+id/clear_data_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/aboutEditText"
        android:layout_margin="16dp"
        android:text="Clear Data" />

    <Button
        android:id="@+id/addPlayerPubButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/clear_data_button"
        android:layout_margin="16dp"
        android:text="Add Player/Team and Pub" />

    <Button
        android:id="@+id/return_to_score"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/addPlayerPubButton"
        android:layout_margin="16dp"
        android:text="Return" />

</RelativeLayout>
